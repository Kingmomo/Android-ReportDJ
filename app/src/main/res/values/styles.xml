<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue_600</item>
        <item name="colorAccent">@color/white_transparency</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditText.Flat.Grey" parent="@style/AppTheme">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>

    </style>

    <style name="TextLimitStyle">
        <item name="android:textColor">@color/white_transparency</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="colorAccent">@color/white_transparency</item>
        <item name="colorControlNormal">@color/white_transparency</item>
        <item name="colorControlActivated">@color/white_transparency</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout"  parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white_transparency</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white_transparency</item>
    </style>
</resources>
