<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/blue_800"
    android:orientation="vertical"
    tools:context=".FormActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_900"
            app:titleTextColor="@color/white_transparency"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.1"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="bottom|center_horizontal"
            />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clipToPadding="false"
            android:padding="@dimen/spacing_large"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                style="@style/EditText.Flat.Grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="@dimen/spacing_medium"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:gravity="center"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:text="23-02-2019"
                android:textColor="@color/white_transparency" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:text="Data Diri"
                android:textColor="@color/white_transparency" />

            <TextView
                android:id="@+id/nik"
                style="@style/EditText.Flat.Grey"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:drawableRight="@drawable/ic_search"
                android:gravity="center|left"
                android:hint="NIK"
                android:drawableLeft="@drawable/ic_nik"
                android:drawablePadding="@dimen/spacing_medium"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@color/white_transparency"
                android:textColorHint="@color/white_transparency" />

            <TextView
                android:id="@+id/dosen"
                style="@style/EditText.Flat.Grey"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:drawableRight="@drawable/ic_search"
                android:drawableLeft="@drawable/ic_account"
                android:drawablePadding="@dimen/spacing_medium"
                android:gravity="center|left"
                android:hint="Nama Dosen"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@color/white_transparency"
                android:textColorHint="@color/white_transparency" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:gravity="bottom"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:text="Perkuliahan"
                android:textColor="@color/white_transparency" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jam"
                    style="@style/EditText.Flat.Grey"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/spacing_xmlarge"
                    android:layout_weight="1.0"
                    android:background="@drawable/edit_text_round_bg_overlay_white"
                    android:drawableRight="@drawable/ic_arrow_drop"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center|left"
                    android:drawableLeft="@drawable/ic_school"
                    android:drawablePadding="@dimen/spacing_medium"
                    android:hint="Jam Kuliah"
                    android:minHeight="@dimen/spacing_xmlarge"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle"
                    android:textColor="@color/white_transparency"
                    android:textColorHint="@color/white_transparency" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/gedung"
                    style="@style/EditText.Flat.Grey"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/spacing_xmlarge"
                    android:layout_weight="1.0"
                    android:background="@drawable/edit_text_round_bg_overlay_white"
                    android:drawableLeft="@drawable/ic_business"
                    android:drawablePadding="@dimen/spacing_medium"
                    android:drawableRight="@drawable/ic_arrow_drop"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center|left"
                    android:hint="Gedung"
                    android:minHeight="@dimen/spacing_xmlarge"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle"
                    android:textColor="@color/white_transparency"
                    android:textColorHint="@color/white_transparency" />


                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0.0dip" />

                <TextView
                    android:id="@+id/ruangan"
                    style="@style/EditText.Flat.Grey"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/spacing_xmlarge"
                    android:layout_weight="1.0"
                    android:background="@drawable/edit_text_round_bg_overlay_white"
                    android:drawableLeft="@drawable/ic_location"
                    android:drawablePadding="@dimen/spacing_medium"
                    android:drawableRight="@drawable/ic_arrow_drop"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center|left"
                    android:hint="Ruangan"
                    android:minHeight="@dimen/spacing_xmlarge"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle"
                    android:textColor="@color/white_transparency"
                    android:textColorHint="@color/white_transparency" />
            </LinearLayout>


            <TextView
                android:id="@+id/namagedung"
                style="@style/EditText.Flat.Grey"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:editable="false"
                android:focusable="false"
                android:gravity="center|left"
                android:hint="Nama Gedung"
                android:drawableLeft="@drawable/ic_business"
                android:drawablePadding="@dimen/spacing_medium"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@color/white_transparency"
                android:textColorHint="@color/white_transparency" />

            <TextView
                android:id="@+id/kategori"
                style="@style/EditText.Flat.Grey"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:drawableLeft="@drawable/ic_widgets"
                android:drawablePadding="@dimen/spacing_medium"
                android:drawableRight="@drawable/ic_arrow_drop"
                android:editable="false"
                android:focusable="false"
                android:gravity="center|left"
                android:hint="Kategori Laporan"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@color/white_transparency"
                android:textColorHint="@color/white_transparency" />

            <TextView
                android:id="@+id/aduan"
                style="@style/EditText.Flat.Grey"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:drawableLeft="@drawable/ic_build"
                android:drawablePadding="@dimen/spacing_medium"
                android:drawableRight="@drawable/ic_arrow_drop"
                android:editable="false"
                android:focusable="false"
                android:gravity="center|left"
                android:hint="Jenis Aduan"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@color/white_transparency"
                android:textColorHint="@color/white_transparency"
                android:visibility="gone" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/etaduan"
                style="@style/TextLimitStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:textColorHint="@color/white_transparency"
                app:counterEnabled="true"
                app:counterMaxLength="40"
                android:visibility="gone"
                app:counterTextAppearance="@style/TextLimitStyle"
                app:hintEnabled="false">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/keterangan"
                    style="@style/EditText.Flat.Grey"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/edit_text_round_bg_overlay_white"
                    android:gravity="top"
                    android:hint="Tulis Aduan"
                    android:maxLength="40"
                    android:padding="@dimen/spacing_xmedium"
                    android:singleLine="true"
                    android:textColor="@color/white_transparency"
                    android:textColorHint="@color/white_transparency"
                    android:visibility="visible" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/kerusakan"
                style="@style/EditText.Flat.Grey"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:drawableLeft="@drawable/ic_build"
                android:drawablePadding="@dimen/spacing_medium"
                android:drawableRight="@drawable/ic_arrow_drop"
                android:editable="false"
                android:focusable="false"
                android:gravity="center|left"
                android:hint="Jenis Kerusakan"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@color/white_transparency"
                android:textColorHint="@color/white_transparency"
                android:visibility="gone" />


            <Button
                android:id="@+id/submit"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="-4.0dip"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:layout_marginRight="-4.0dip"
                android:background="@drawable/btn_orange"
                android:text="SUBMIT"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/white_transparency" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</LinearLayout>